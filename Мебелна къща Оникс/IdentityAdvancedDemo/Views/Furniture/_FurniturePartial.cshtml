@model AllFurnitureViewModel

<div class="card col-4" style="width: 20rem; ">
    <div class="card-body">
        <h5 class="card-title mt-1">@Model.Name</h5>
        <img class="card-img-top" src=@Model.ImageUrl alt="Ad Image" id="imageurl">
        <p class="mb-0"><span class="fw-bold">Категория: </span>@Model.Category</p>
        @if (Model.Price != null && Model.Price != 0)
        {
            <p class="mb-0"><span class="fw-bold">Цена: </span>@Model.Price лв.</p>
        }
        else 
        {
            <p class="mb-0"><span class="fw-bold">Намалена цена: </span>@Model.NewPrice лв.</p>
            <p class="mb-0"><span class="fw-bold">Стара цена: </span>@Model.OldPrice лв.</p>
        }
    </div>

    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="Admin" asp-action="EditFurniture" asp-route-id="@Model.Id" style="background-color: black; color: #ffffff;" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Edit the Furniture</a>
    }
    else
    {
        <form class="input-group-sm" asp-controller="Furniture" asp-action="AddToCart" asp-route-id="@Model.Id">
            <input type="submit" value="Добавяне в количка" style="background-color: black; color: #ffffff;" class="fs-6 btn mb-3 w-100 p-3 fw-bold" />
        </form>
        <form class="input-group-sm" asp-controller="Furniture" asp-action="DetailsFurniture" asp-route-id="@Model.Id">
            <input type="submit" value="Детайли" style="background-color: black; color: #ffffff;" class="fs-6 btn mb-3 w-100 p-3 fw-bold" />
        </form>
    }

</div>
    


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

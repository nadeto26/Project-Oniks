@model AllFurnitureQuaryModel
@{
    ViewBag.Title = "Всички мебели";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form method="get">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Category">Категория</label>
                <select asp-for="Category" class="form-control">
                    <option value="">Всичко</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category">@category</option>
                    }
                </select>
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="SearchItem"></label>
                <input asp-for="SearchItem" class="form-control" placeholder="...">
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Sorting">Сортиране по цена</label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0">Най-ниска цена</option>
                    <option value="1">Най-висока цена</option>
                </select>
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                <label style="visibility:hidden;">Dummy</label>
                <input type="submit" value="Търси" class="btn btn-dark btn-block" />
            </div>
        </div>
    </div>
   
    <div class="row justify-content-center align-items-center mt-4"></div>
</form>




@if (!Model.Furnitures.Any())
{
    <h2 class="text-center">Няма нищо намерено!</h2>
}

<div class="row">
    @foreach (var furniture in Model.Furnitures)
    {
        <partial name="_FurniturePartial" model="@furniture" />
    }
</div>

@model AddFurnitureViewModel

@{
    ViewBag.Title = "Детайли";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container" style="display:inline">
    <div class="row">
        <div class="col-4">
            <img class="card-img-top" style="width: 20rem;"
                 src="@Model.ImageUrl" alt="House Image">
        </div>
        <div class="card col-8 border-0">
            <p style="font-size:25px;"><u>@Model.Name</u></p>
            <p>Доставка: <b>@Model.Delivery дни</b></p>
             
            @if (Model.Price != null && Model.Price != 0)
            {
                <p class="mb-0"> Цена: <span class="fw-bold">@Model.Price лв.</span></p>
                <br />
            }
            else
            {
                <p class="mb-0"> Намалена цена: <span class="fw-bold">@Model.NewPrice лв.</span></p>
                <br />
                <p class="mb-0">Стара цена: <span class="fw-bold">@Model.OldPrice лв.</span></p>
                <br />
            }

            <p>@Model.Description</p>
            <p>Категория: <b>@Model.Category</b></p>
            <p>Вносител: <b>@Model.Importer</b></p>
            <p>Височина: <b>@Model.Height cm</b></p>
            <p>Широчина: <b>@Model.Weight cm</b></p>
            
            
            <p></p>
          
        </div>
    </div>
</div>
